<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Your Taxes | {{ branding.platform_name }}</title>
    <meta name="description" content="{{ branding.meta_description }}">
    {% if branding.favicon_url %}
    <link rel="icon" href="{{ branding.favicon_url }}">
    {% endif %}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            color: #333;
            background: #f7fafc;
        }

        /* Progress bar */
        .progress-container {
            position: sticky;
            top: 0;
            background: white;
            border-bottom: 1px solid #e2e8f0;
            z-index: 100;
        }

        .progress-bar {
            height: 4px;
            background: linear-gradient(135deg, {{ branding.primary_color }} 0%, {{ branding.secondary_color }} 100%);
            transition: width 0.3s ease;
        }

        .steps {
            display: flex;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .step {
            flex: 1;
            text-align: center;
            position: relative;
            padding: 10px;
            opacity: 0.4;
            transition: opacity 0.3s;
        }

        .step.active {
            opacity: 1;
            font-weight: 600;
        }

        .step.complete {
            opacity: 0.7;
        }

        .step-number {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: #e2e8f0;
            color: #718096;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 5px;
            font-weight: 700;
        }

        .step.active .step-number {
            background: {{ branding.primary_color }};
            color: white;
        }

        .step.complete .step-number {
            background: #48bb78;
            color: white;
        }

        /* Main content */
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .card {
            background: white;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 30px;
        }

        h1 {
            font-size: 2rem;
            color: #2d3748;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #718096;
            margin-bottom: 30px;
        }

        /* Upload area */
        .upload-area {
            border: 3px dashed #cbd5e0;
            border-radius: 12px;
            padding: 60px 20px;
            text-align: center;
            transition: all 0.3s;
            cursor: pointer;
        }

        .upload-area:hover {
            border-color: {{ branding.primary_color }};
            background: #f7fafc;
        }

        .upload-area.dragover {
            border-color: {{ branding.primary_color }};
            background: #edf2f7;
        }

        .upload-icon {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        input[type="file"] {
            display: none;
        }

        /* Extracted data */
        .data-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .data-field {
            padding: 15px;
            background: #f7fafc;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
        }

        .data-label {
            font-size: 0.85rem;
            color: #718096;
            margin-bottom: 5px;
        }

        .data-value {
            font-size: 1.1rem;
            color: #2d3748;
            font-weight: 600;
        }

        .data-field input {
            width: 100%;
            padding: 8px;
            border: 1px solid #cbd5e0;
            border-radius: 6px;
            font-size: 1rem;
        }

        /* Buttons */
        .btn {
            padding: 14px 28px;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            display: inline-block;
            text-decoration: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, {{ branding.primary_color }} 0%, {{ branding.secondary_color }} 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: white;
            color: {{ branding.primary_color }};
            border: 2px solid {{ branding.primary_color }};
        }

        .btn-secondary:hover {
            background: #f7fafc;
        }

        .actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        /* Results preview */
        .results-preview {
            background: linear-gradient(135deg, {{ branding.primary_color }} 0%, {{ branding.secondary_color }} 100%);
            color: white;
            padding: 30px;
            border-radius: 12px;
            text-align: center;
        }

        .amount {
            font-size: 3rem;
            font-weight: 700;
            margin: 20px 0;
        }

        /* Loading */
        .loading {
            display: none;
            text-align: center;
            padding: 40px;
        }

        .loading.show {
            display: block;
        }

        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid {{ branding.primary_color }};
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container {
                padding: 20px 15px;
            }

            .card {
                padding: 25px;
            }

            h1 {
                font-size: 1.5rem;
            }

            .data-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
    {% if branding.custom_css %}
    <link rel="stylesheet" href="{{ branding.custom_css }}">
    {% endif %}
</head>
<body>
    <!-- Progress bar -->
    <div class="progress-container">
        <div class="progress-bar" id="progress-bar" style="width: 0%"></div>
        <div class="steps">
            <div class="step active" data-state="upload">
                <div class="step-number">1</div>
                <div>Upload</div>
            </div>
            <div class="step" data-state="extract">
                <div class="step-number">2</div>
                <div>Extract</div>
            </div>
            <div class="step" data-state="validate">
                <div class="step-number">3</div>
                <div>Validate</div>
            </div>
            <div class="step" data-state="review">
                <div class="step-number">4</div>
                <div>Review</div>
            </div>
            <div class="step" data-state="complete">
                <div class="step-number">5</div>
                <div>Complete</div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- UPLOAD STATE -->
        <div id="upload-state" class="card">
            <h1>Upload Your Tax Documents</h1>
            <p class="subtitle">Upload your W-2, 1099s, and other tax forms. We'll extract the data automatically.</p>

            <div class="upload-area" id="upload-area">
                <div class="upload-icon">üìÑ</div>
                <h3>Drag & drop your documents here</h3>
                <p style="color: #718096; margin: 10px 0;">or click to browse</p>
                <input type="file" id="file-input" accept=".pdf,.png,.jpg,.jpeg" multiple>
            </div>

            <div id="uploaded-files" style="margin-top: 20px;"></div>
        </div>

        <!-- LOADING STATE -->
        <div id="loading-state" class="loading">
            <div class="spinner"></div>
            <h3>Processing your documents...</h3>
            <p style="color: #718096;">This usually takes 10-15 seconds</p>
        </div>

        <!-- VALIDATE STATE -->
        <div id="validate-state" class="card" style="display: none;">
            <h1>Review Extracted Data</h1>
            <p class="subtitle">We've extracted the following information. Please review and correct if needed.</p>

            <div class="data-grid" id="extracted-data"></div>

            <div class="actions">
                <button class="btn btn-primary" onclick="confirmData()">Looks Good ‚Üí</button>
                <button class="btn btn-secondary" onclick="editData()">Edit Data</button>
            </div>
        </div>

        <!-- REVIEW STATE -->
        <div id="review-state" class="card" style="display: none;">
            <h1>Your Tax Summary</h1>
            <p class="subtitle">Review your results before filing</p>

            <div class="results-preview">
                <h3>Estimated Refund</h3>
                <div class="amount" id="refund-amount">$0</div>
                <p>Based on the information you provided</p>
            </div>

            <div style="margin-top: 30px;">
                <h3>Want to explore what-if scenarios?</h3>
                <p style="color: #718096; margin: 10px 0;">See how different deductions could affect your refund</p>
                <button class="btn btn-secondary" onclick="openScenarios()">
                    üí° Explore Scenarios
                </button>
            </div>

            <div class="actions">
                <button class="btn btn-primary" onclick="submitReturn()">Submit Return ‚Üí</button>
                <button class="btn btn-secondary" onclick="goBack()">‚Üê Back</button>
            </div>
        </div>
    </div>

    <script>
        // Get session ID from URL
        const urlParams = new URLSearchParams(window.location.search);
        const sessionId = urlParams.get('session_id');
        const mode = urlParams.get('mode') || 'auto';

        let currentState = 'upload';
        const states = ['upload', 'extract', 'validate', 'review', 'complete'];

        // Initialize
        if (!sessionId) {
            // Create new session if none provided
            createSession();
        } else {
            // Load existing session
            loadSession();
        }

        // File upload handling
        const uploadArea = document.getElementById('upload-area');
        const fileInput = document.getElementById('file-input');

        uploadArea.addEventListener('click', () => fileInput.click());

        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragover');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            handleFiles(e.dataTransfer.files);
        });

        fileInput.addEventListener('change', (e) => {
            handleFiles(e.target.files);
        });

        async function createSession() {
            try {
                const response = await fetch('/api/filing/create-session', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ workflow_type: mode, tax_year: 2024 })
                });
                const data = await response.json();
                window.history.replaceState({}, '', `?session_id=${data.session_id}&mode=${mode}`);
            } catch (error) {
                console.error('Failed to create session:', error);
                alert('Failed to start filing session. Please try again.');
            }
        }

        async function loadSession() {
            try {
                const response = await fetch(`/api/filing/session/${sessionId}`);
                const session = await response.json();

                // Update state based on session
                updateState(session.state);
            } catch (error) {
                console.error('Failed to load session:', error);
            }
        }

        async function handleFiles(files) {
            const uploadedFilesDiv = document.getElementById('uploaded-files');

            for (const file of files) {
                const formData = new FormData();
                formData.append('file', file);

                try {
                    // Show loading
                    showLoading();

                    const response = await fetch(`/api/filing/${sessionId}/upload`, {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        // Move to validate state
                        displayExtractedData(result.extracted_fields);
                        updateState('validate');
                    }
                } catch (error) {
                    console.error('Upload failed:', error);
                    alert('Failed to process document. Please try again.');
                } finally {
                    hideLoading();
                }
            }
        }

        function displayExtractedData(fields) {
            const grid = document.getElementById('extracted-data');
            grid.innerHTML = '';

            for (const [key, value] of Object.entries(fields)) {
                const field = document.createElement('div');
                field.className = 'data-field';
                field.innerHTML = `
                    <div class="data-label">${formatLabel(key)}</div>
                    <input type="text" value="${value}" data-field="${key}">
                `;
                grid.appendChild(field);
            }
        }

        function formatLabel(key) {
            return key.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
        }

        async function confirmData() {
            // Collect confirmed data
            const fields = document.querySelectorAll('#extracted-data input');
            const confirmedData = {};

            fields.forEach(input => {
                confirmedData[input.dataset.field] = input.value;
            });

            try {
                showLoading();

                // Confirm data
                await fetch(`/api/filing/${sessionId}/confirm`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(confirmedData)
                });

                // Calculate taxes
                const calcResponse = await fetch(`/api/filing/${sessionId}/calculate`, {
                    method: 'POST'
                });

                const result = await calcResponse.json();

                // Show results
                displayResults(result);
                updateState('review');
            } catch (error) {
                console.error('Calculation failed:', error);
                alert('Failed to calculate taxes. Please try again.');
            } finally {
                hideLoading();
            }
        }

        function displayResults(result) {
            const amountEl = document.getElementById('refund-amount');

            if (result.refund) {
                amountEl.textContent = `$${result.refund.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
                amountEl.parentElement.querySelector('h3').textContent = 'Estimated Refund';
            } else if (result.tax_owed) {
                amountEl.textContent = `$${result.tax_owed.toLocaleString('en-US', {minimumFractionDigits: 2})}`;
                amountEl.parentElement.querySelector('h3').textContent = 'Tax Owed';
            }
        }

        async function submitReturn() {
            try {
                showLoading();

                const response = await fetch(`/api/filing/${sessionId}/submit`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ confirmed_data: {} })
                });

                const result = await response.json();

                if (result.success) {
                    // Redirect to results page
                    window.location.href = `/results?session_id=${sessionId}`;
                }
            } catch (error) {
                console.error('Submission failed:', error);
                alert('Failed to submit return. Please try again.');
            } finally {
                hideLoading();
            }
        }

        function updateState(newState) {
            currentState = newState;

            // Hide all states
            document.querySelectorAll('.card, .loading').forEach(el => {
                el.style.display = 'none';
            });

            // Show current state
            const stateEl = document.getElementById(`${newState}-state`);
            if (stateEl) {
                stateEl.style.display = 'block';
            }

            // Update progress
            const stateIndex = states.indexOf(newState);
            const progress = ((stateIndex + 1) / states.length) * 100;
            document.getElementById('progress-bar').style.width = `${progress}%`;

            // Update steps
            document.querySelectorAll('.step').forEach((step, index) => {
                step.classList.remove('active', 'complete');
                if (index < stateIndex) {
                    step.classList.add('complete');
                } else if (index === stateIndex) {
                    step.classList.add('active');
                }
            });
        }

        function showLoading() {
            document.getElementById('loading-state').classList.add('show');
        }

        function hideLoading() {
            document.getElementById('loading-state').classList.remove('show');
        }

        function openScenarios() {
            window.location.href = `/scenarios?session_id=${sessionId}`;
        }

        function goBack() {
            const currentIndex = states.indexOf(currentState);
            if (currentIndex > 0) {
                updateState(states[currentIndex - 1]);
            }
        }

        function editData() {
            // Allow editing the fields
            alert('Edit mode enabled. Modify the fields and click "Looks Good" when done.');
        }

        // Auto-save every 30 seconds
        setInterval(async () => {
            const fields = document.querySelectorAll('#extracted-data input');
            const data = {};

            fields.forEach(input => {
                data[input.dataset.field] = input.value;
            });

            if (Object.keys(data).length > 0) {
                try {
                    await fetch(`/api/filing/${sessionId}/auto-save`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                    console.log('Auto-saved');
                } catch (error) {
                    console.error('Auto-save failed:', error);
                }
            }
        }, 30000);
    </script>
    {% if branding.custom_js %}
    <script src="{{ branding.custom_js }}"></script>
    {% endif %}
</body>
</html>
